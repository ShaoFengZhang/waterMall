/* 轮播图Swiper */

.topShufflingBox, #shuffSwiper {
    width: 750rpx;
    height: 750rpx;
    margin: 0 auto;
    border-radius: 10rpx;
}

.topShufflingBox image {
    width: 690rpx;
    height: 324rpx;
    border-radius: 10rpx;
}

.test {
    width: 100%;
    height: 40rpx;
    text-align: center;
    font-size: 22rpx;
    line-height: 40rpx;
    position: absolute;
    bottom: 10rpx;
}

.test .selectShuff {
    display: inline-block;
    width: 30rpx;
    height: 10rpx;
    background: rgba(224, 46, 36, 1);
    opacity: 0.8;
    border-radius: 5rpx;
    margin-right: 10rpx;
}

.test .noShuff {
    display: inline-block;
    width: 10rpx;
    height: 10rpx;
    background: rgba(224, 46, 36, 1);
    opacity: 0.2;
    border-radius: 50%;
    margin-right: 10rpx;
}

/* 顶部 */

.goodWindow, .goodWindow image {
    width: 750rpx;
    height: 750rpx;
    position: relative;
}

.goodSales {
    display: inline-block;
    padding: 2rpx 10rpx;
    height: 32rpx;
    background: rgba(224, 46, 36, 1);
    opacity: 0.5;
    border-radius: 16rpx;
    color: #fffefe;
    font-size: 20rpx;
    text-align: center;
    line-height: 34rpx;
    position: absolute;
    left: 42rpx;
    top: 36rpx;
}

.point {
    display: inline-block;
    width: 6rpx;
    height: 6rpx;
    background: #e02e24;
    opacity: 0.5;
    border-radius: 50%;
    position: absolute;
    top: 14rpx;
    right: -20rpx;
}

.goodTitle {
    width: 100%;
    height: 124rpx;
    box-sizing: border-box;
    padding: 10rpx 30rpx;
    color: #333;
    font-size: 30rpx;
    line-height: 54rpx;
    font-family: PingFang-SC-Bold;
    font-weight: bold;

	overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.pinTxt {
    display: inline-block;
    width: 86rpx;
    height: 32rpx;
    background: rgba(224, 46, 36, 1);
    border-radius: 16rpx;
    color: #fff;
    font-size: 20rpx;
    text-align: center;
    line-height: 32rpx;
    font-weight: normal;
    position: relative;
    top: -4rpx;
}

.goodPrice {
    width: 100%;
    box-sizing: border-box;
    padding: 0 0 0 30rpx;
}

.goodPrice text:first-child {
    color: #e02e24;
    font-size: 38rpx;
    font-weight: bold;
    vertical-align: middle;
}

.priceNum {
    font-size: 42rpx;
    color: #e02e24;
    font-weight: normal;
    margin-right: 26rpx;
    vertical-align: middle;
}

.juanhouTxt {
    font-size: 20rpx;
    font-family: PingFang-SC-Medium;
    font-weight: normal;
    color: rgba(224, 46, 36, 1);
    background: rgba(224, 46, 36, 0.1);
    border-radius: 8px;
    padding: 2rpx 10rpx;
    margin-right: 34rpx;
}

.ordersBack {
    color: #e02e24;
    font-size: 22rpx;
    border: 2rpx solid #e02e24;
    padding: 0 10rpx;
}

.preferential {
    color: #797979;
    font-size: 24rpx;
    margin-top: 20rpx;
    padding-left: 30rpx;
}

.bottomBaner {
    width: 100%;
    box-sizing: border-box;
    padding: 0 30rpx;
    font-size: 22rpx;
    color: rgba(51, 51, 51, 1);
    display: flex;
    justify-content: space-between;
    margin-top: 20rpx;
}

.bottomBaner image {
    width: 22rpx;
    height: 22rpx;
    vertical-align: middle;
}

.bottomTap {
    width: 100%;
    height: 92rpx;
    background-color: #fff;
    position: fixed;
    bottom: 0;
    left: 0;
    /* box-sizing: border-box; */
    padding: 0rpx 0rpx 0 30rpx;
}

.bottomTap image {
    width: 44rpx;
    height: 44rpx;
}

.homeIconBox, .botStar {
    display: inline-block;
    font-size: 20rpx;
    font-family: PingFang-SC-Medium;
    color: rgba(51, 51, 51, 1);
