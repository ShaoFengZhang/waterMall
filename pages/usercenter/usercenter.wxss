#scrollBox {
    width: 100%;
    box-sizing: border-box;
    padding: 0;
    background-repeat: no-repeat;
    background-origin: border-box;
    position: relative;
    overflow: hidden;
    background-image: url('https://tp.datikeji.com/a/15422612654834/T0tndE3B5trhC5UP8hIhXTLicGHFjEeJn7JEPu1Y.png');
    background-size: 750rpx 340rpx;
}

.userInfo {
    width: 750rpx;
    height: 158rpx;
    box-sizing: border-box;
    padding: 30rpx 0 0 30rpx;
    display: flex;
    justify-content: space-between;
}

.infoLeft {
    width: 128rpx;
    height: 128rpx;
    border-radius: 50%;
    overflow: hidden;
    border: 4rpx solid white;
    box-sizing: border-box;
}

.infoRight {
    width: 568rpx;
    height: 128rpx;
    color: white;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.userName {
    font-size: 34rpx;
}

.userDoller {
    font-size:30rpx;
}

.userDoller text {
    font-size: 36rpx;
	font-weight: bold;
}

.userData {
    width: 690rpx;
    height: 128rpx;
    background-color: #fff;
    box-shadow: 0rpx 0rpx 20rpx 0rpx rgba(111, 105, 103, 0.16);
    border-radius: 8rpx;
    margin: 60rpx auto 0;
    box-sizing: border-box;
    display: flex;
    justify-content: space-around;
}

.userDataItem {
    text-align: center;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.orderTxt {
    width: 690rpx;
    margin: 34rpx auto 0;
    color: #333;
    font-size: 30rpx;
    font-family: PingFang-SC-Medium;
    font-weight: 500;
}

.orderItem {
    width: 580rpx;
    height: 146rpx;
    margin: 0 auto;
    box-sizing: border-box;
    padding: 30rpx 0 28rpx;
    display: flex;
    justify-content: space-between;
}

.orderDataItem {
    color: #333;
    font-size: 28rpx;
    text-align: center;
}

.orderDataItem image {
    width: 54rpx;
    height: 54rpx;
}

.shareFriend {
    width: 690rpx;
    height: 222rpx;
    margin: 0 auto;
    border-radius: 8rpx;
    color: #fff;
    text-align: center;
    background: url('https://tp.datikeji.com/a/15422620067802/B479wJs6YneGvlDYhOqDSyNqATKEGKVIw2GwnFCh.png');
    box-sizing: border-box;
    background-size: cover;
    background-repeat: no-repeat;
    background-origin: border-box;
    position: relative;
    overflow: hidden;
}

.shareFriendIcon {
    width: 664rpx;
    height: 116rpx;
    margin: 92rpx auto 0;
    background-image: url('https://tp.datikeji.com/a/15422621402881/AhKvG8Nu1nEYQ8TXTPdMbsatyOoSs3EYOLddKdVp.png');
    background-repeat: no-repeat;
    background-size: 664rpx 116rpx;
    box-sizing: border-box;
    position: relative;
    overflow: hidden;
    display: flex;
    justify-content: conter;
}

.shareFriendLeftIcon {
    width: 290rpx;
    height: 100%;
	box-sizing: border-box;
	padding-left: 24rpx;
	text-align: center;
	position: relative;
}

.shareFriendRightIcon {
    width: 290rpx;
    height: 100%;
	box-sizing: border-box;
	padding-right: 24rpx;
	text-align: center;
	position: relative;
}

