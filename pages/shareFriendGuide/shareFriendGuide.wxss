/* 动效 */

.LeftRightAni {
    animation: ani 0.5s linear 0.5s infinite;
}

@keyframes ani {
    0% {
        transform: translateX(0px);
    }

    25% {
        transform: translateX(-4px);
    }

    50% {
        transform: translateX(0px);
    }

    75% {
        transform: translateX(4px);
    }

    100% {
        transform: translateX(0px);
    }
}

