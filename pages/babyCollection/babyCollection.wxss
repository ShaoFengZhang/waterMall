

/* 列表 */

.dataListBox {
    width: 690rpx;
    margin: 0 auto;
}

.dataIteam {
    width: 100%;
    height: 330rpx;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0px 0px 20rpx 0rpx rgba(111, 105, 103, 0.16);
    border-radius: 8rpx;
    box-sizing: border-box;
    padding: 30rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: visible;
    margin-bottom: 30rpx;
}

.dataIteam:first-child{
	margin-top: 30rpx;
}

.dataIcon {
    width: 270rpx;
    height: 270rpx;
    margin-right: 28rpx;
    border-radius: 8rpx;
}

.dataIcon image {
    width: 270rpx;
    height: 270rpx;
    border-radius: 8rpx;
}

.details {
    width: 328rpx;
    height: 270rpx;
    position: relative;
}

.goodDescribe {
    width: 100%;
    height: 100rpx;
    font-size: 28rpx;
    color: #333;
    line-height: 50rpx;
    word-wrap: break-word;
    word-break: break-all;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.goodBackBox text:first-child {
    font-size: 20rpx;
    color: #e02e24;
    border: 2rpx solid #e02e24;
    margin-right: 22rpx;
}

.goodBackBox text:last-child {
    font-size: 20rpx;
    color: #797979;
}

.goodPrice {
    margin-top: 14rpx;
    color: #e02e24;
    font-size: 26rpx;
}

.goodPrice text:first-child {
    font-size: 36rpx;
    color: #e02e24;
    margin-right: 32rpx;
}

.goodPrice text:last-child {
    font-size: 22rpx;
    color: #797979;
    text-decoration: line-through;
}

.juan {
    position: absolute;
    left: 0;
    bottom: 0;
}

.shareGood {
    width: 160rpx;
    height: 54rpx;
    background-color: #e02e24;
    position: absolute;
    bottom: 0;
    right: -60rpx;
    border-radius: 54rpx 0 0 54rpx;
}

#shareGoodBtn {
    width: 160rpx;
    height: 54rpx;
    background-color: #e02e24;
    border-radius: 54rpx 0 0 54rpx;
    padding: 0;
    color: white;
    font-size: 24rpx;
    line-height: 50rpx;
    position: relative;
}

.shareGood image {
    width: 42rpx;
    height: 42rpx;
    vertical-align: middle;
}

.shareGood text {
    display: inline-block;
    vertical-align: middle;
}

.noData {
    margin: 30vh auto 0;
}

.noData, .noData image {
    width: 467rpx;
    height: 400rpx;
}

.collectionBtn {
    width: 180rpx;
    height: 58rpx;
    border: 3rpx solid rgba(51, 51, 51, 1);
    border-radius: 26rpx;
	text-align: center;
	font-size: 30rpx;
	color: #333333;
	line-height: 58rpx;
	margin: 0 auto;
	position: relative;
	top: -20rpx;
}

.nodataTxt{
	color: #333333;
	font-size: 26rpx;
	text-align: center;
	position:relative;
	top: -60rpx;
}

.hover-class{
	background-color:#f2f2f2;
}
